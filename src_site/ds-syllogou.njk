---
layout: base.njk
title: Δ.Σ. Συλλόγου
---
{% set listview %}
  {% include "../assets/css/components/listview.min.css" %}
{% endset %}
<style>
  {{ listview | cssmin | safe }}
  .box {
  background: rgba(0, 0, 0, 0.05);
  padding: 40px;
  margin: auto;
  margin-top: 5%;
  text-align: center;
  color: #000;
}

.placeholder img {
width: 200px !important;
}

.box-img {
  border-radius: 50%;
  width: 200px;
  height: 200px;
}

.box h3 {
  letter-spacing: 1px;
  font-weight: 100;
  font-size: 25px;
}

.box p {
  font-size: 18px;
  font-weight: 100;
}
</style>

  <header class="g-center">
    <h2>Δ.Σ. Συλλόγου</h2>
  </header>
  <div class="posts">
    {%- for item in dss.items -%}
      <article class="box">
        <div class="placeholder">
          {%- if item.image -%}
            <img src="{{item.image}}" alt="profile-picture" class="box-img" style="max-width:100%" loading="lazy"/>
          {% else %}
              <img loading="lazy" alt="" src="data:image/svg+xml;base64," style="opacity:.25"/>
          {%- endif -%}
        </div>
        <h3>{{ item.name }}</h3>
        <p>{{ item.desc }}</p>
      </article>
    {%- endfor -%}
  </div>
</section>
